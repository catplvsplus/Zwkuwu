// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:database.db"
}

model UserSettings {
  id               String  @id @unique
  allowSniping     Boolean @default(true)
  cleanDataOnLeave Boolean @default(false)
}

model Snipes {
  id              String   @id @unique
  authorId        String
  channelId       String
  content         String
  repliedToUserId String?
  edited          Boolean  @default(false)
  attachments     Int      @default(0)
  createdAt       DateTime @default(now())
}

model Confessions {
  id        String   @id @unique
  authorId  String
  channelId String
  messageId String   @unique
  title     String?
  content   String
  createdAt DateTime @default(now())
}

model MinecraftIPCache {
  id        Int      @id @unique @default(autoincrement())
  host      String
  port      Int?
  proxy     Boolean
  createdAt DateTime @default(now())
}

model SavedMemberData {
  id        String   @id @unique
  guildId   String
  nickname  String?
  roles     String
  createdAt DateTime @default(now())
}

model PlayerSkinData {
  player        String   @id @unique
  file          String?
  lastUpdatedAt DateTime @default(now())
  createdAt     DateTime @default(now())
}

model SelfPromotions {
  id                String    @id @unique
  authorId          String
  content           String
  createdAt         DateTime @default(now())
  approvedAt        DateTime?
  approvedById      String?
  approvedMessageId String?
  approvedChannelId String?
}